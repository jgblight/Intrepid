container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python intrepid/manage.py migrate --noinput"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "intrepid.settings"
    "PYTHONPATH": "/opt/python/current/app/intrepid:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: intrepid/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"
